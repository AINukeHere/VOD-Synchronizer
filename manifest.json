{
    "manifest_version": 3,
    "name": "VOD Synchronizer",
    "version": "1.2.0",
    "description": "SOOP, CHZZK 다시보기 타임스탬프 표시 및 다른 스트리머의 다시보기와 동기화",
    "author": "AINukeHere",
    "homepage_url": "https://github.com/AINukeHere/VOD-Synchronizer",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.sooplive.co.kr/*",
                "https://vod.sooplive.co.kr/*", 
                "https://chzzk.naver.com/*"
            ],
            "js": [
                "src/common/log_manager.js",
                "src/common/settings_manager.js",
                "src/common/class_loader.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["https://www.sooplive.co.kr/*"],
            "js": ["src/soop_content.js"],
            "all_frames": true
        },
        {
            "matches": ["https://vod.sooplive.co.kr/*"],
            "js": ["src/soop_content.js"]
        },
        {
            "matches": ["https://chzzk.naver.com/*"],
            "js": ["src/chzzk_content.js"],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "data/rp_nicknames.json",
                "src/module/soop_api.js",
                "src/module/timestamp_manager.js",
                "src/module/soop_timestamp_manager.js",
                "src/module/chzzk_timestamp_manager.js",
                "src/module/base_panel.js",
                "src/module/soop_sync_panel.js",
                "src/module/chzzk_sync_panel.js",
                "src/module/rp_nickname_panel.js",
                "src/module/soop_streamer_id_manager.js",
                "src/module/chzzk_vod_linker.js",
                "src/module/chzzk_vod_finder.js",
                "src/module/soop_vod_linker.js"
            ],
            "matches": ["https://chzzk.naver.com/*", "https://www.sooplive.co.kr/*", "https://vod.sooplive.co.kr/*"]
        }
    ],
    "commands": {
        "open-settings": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "설정 창 열기"
        }
    },
    "action": {
        "default_popup": "src/settings.html"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    }
}